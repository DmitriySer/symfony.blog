{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <div class="container mt-2 mb-2 pt-5 pb-5" id="article-grid">
        <div class="row justify-content-center">
            {% for post in posts %}
                <div class="col-xl-6 col-lg-12 text-center">
                    <a href="./post_id{{ post.getId() }}">
                        <div class="article-card">
                            <div class="article-meta text-left">
                                <h2>{{ post.getTitle() }}</h2>
                                <p>{{ post.getContent()|striptags|length > 100 ? post.getContent()|striptags|slice(0, 100)~ '...' : post.getContent()|striptags }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
